#!/bin/bash

# Get the path that this script is located
SCRIPT_LOCATION=`dirname $0`
# Move to the directory of this script so
# that path relative configuration works
cd ${SCRIPT_LOCATION}

# get user input
${SCRIPT_LOCATION}/adminInterface
RETURN_CODE=$?

# The exit code for adminInterface returns
# the number of inserts executed. Only
# regenerate the website if new data was added.
#
if [[ $RETURN_CODE != 0 ]] ; then
  # regenerate website
  ${SCRIPT_LOCATION}/generateWebsite
fi
